<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="CustomImageButton">
        <attr name="showText" format="boolean" />
        <attr name="textPosition" format="enum">
            <enum name="none" value="0"/>
            <enum name="text_top" value="1"/>
            <enum name="text_left" value="2"/>
            <enum name="text_right" value="3"/>
            <enum name="text_bottom" value="4"/>
        </attr>
        <attr name="imageSrc" format="string" />
        <attr name="imageWidth" format="string" />
        <attr name="imageLength" format="string" />
        <attr name="text" format="string" />


    </declare-styleable>
</resources>