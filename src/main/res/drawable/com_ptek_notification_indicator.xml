<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_enabled="false">
        <shape android:shape="oval">
            <corners android:radius="@dimen/com_ptek_notification_indicator_corner_radius" />
            <size android:width="@dimen/com_ptek_notification_indicator_width"
                android:height="@dimen/com_ptek_notification_indicator_height"/>
            <solid android:color="@color/com_ptek_notification_indicator_bg_color_disabled" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="oval">
            <corners android:radius="@dimen/com_ptek_notification_indicator_corner_radius" />
            <size android:width="@dimen/com_ptek_notification_indicator_width"
                android:height="@dimen/com_ptek_notification_indicator_height"/>
            <solid android:color="@color/com_ptek_notification_indicator_bg_color_pressed" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <corners android:radius="@dimen/com_ptek_notification_indicator_corner_radius" />
            <size android:width="@dimen/com_ptek_notification_indicator_width"
                android:height="@dimen/com_ptek_notification_indicator_height"/>
            <solid android:color="@color/com_ptek_notification_indicator_bg_color" />
        </shape>
    </item>
</selector>