<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:id="@+id/custom_button_imagetestcases_layout"
    >

    <com.prelimtek.android.customcomponents.view.CustomImageButton
        android:id="@+id/bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/btn_layout_margin"
        android:tooltipText="@string/cancel"
        app:imageSrc="@drawable/trash"
        app:text="Bottom"
        app:showText="true"
        app:textPosition="text_bottom"
        />


    <com.prelimtek.android.customcomponents.view.CustomImageButton
        android:id="@+id/top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/btn_layout_margin"
        android:tooltipText="@string/cancel"
        app:imageSrc="@drawable/trash"
        app:text="Top"
        app:showText="true"
        app:textPosition="text_top"
        />


    <com.prelimtek.android.customcomponents.view.CustomImageButton
        android:id="@+id/left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/btn_layout_margin"
        android:tooltipText="@string/cancel"
        app:imageSrc="@drawable/trash"
        app:text="Left"
        app:showText="true"
        app:textPosition="text_left"
        />


    <com.prelimtek.android.customcomponents.view.CustomImageButton
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/btn_layout_margin"
        android:tooltipText="@string/cancel"
        app:imageSrc="@drawable/trash"
        app:text="Right"
        app:showText="true"
        app:textPosition="text_right"
        />


    <com.prelimtek.android.customcomponents.view.CustomImageButton
        android:id="@+id/none"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/btn_layout_margin"
        android:tooltipText="@string/cancel"
        app:imageSrc="@drawable/trash"
        app:text="None"
        app:showText="true"
        />

</LinearLayout>