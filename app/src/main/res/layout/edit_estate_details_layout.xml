<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="com.prelimtek.android.validation.adapter.TelephoneBindingAdapter"/>
        <import type="io.mtini.android.view.TextViewValueConverter"/>
        <!--<import type="java.lang.String"/> -->
        <import type="io.mtini.model.EstateModel"/>
        <variable name="estate" type="EstateModel" />
    </data>


    <RelativeLayout
        android:id="@+id/edit_estate_layoutView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="@dimen/activity_vertical_margin"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Edit Estate Details"
            android:gravity="center"
            android:textStyle="bold"
            android:layout_margin="@dimen/activity_horizontal_margin"
            android:textColor="@android:color/holo_orange_dark"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/textEDitEstateDetails"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@android:color/white"
            android:id="@+id/estateEditDetailsLinearLayout"
            android:layout_below="@+id/textEDitEstateDetails"
            android:layout_above="@+id/footer">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="@string/app_name"
                android:src="@drawable/estate_building"
                android:layout_margin="@dimen/page_icon_margin"
                android:id="@+id/estateImage"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/table_padding"
                        >

                        <TableRow
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/table_row_padding">

                            <TextView android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/nameLabel"
                                android:text="Name:" />


                            <EditText android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/name"
                                android:text="@={estate.name}"
                                android:maxEms="12"
                                android:focusableInTouchMode="true"
                                android:defaultFocusHighlightEnabled="true"
                                android:nextFocusDown="@id/estateType"
                                android:hint="@string/estate_name_tooltip"
                                app:validationRule="@{@string/string_gt_3_lt_20}"
                                app:required="@{true}"
                                app:errorMessage="@{@string/error_string_gt_3_lt_20}"
                                app:errorLabel="@{nameLabel}"/>

                        </TableRow>
                        <TableRow android:padding="@dimen/table_row_padding">

                            <TextView android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/estateTypeLabel"
                                android:text="Type:" />

                            <Spinner
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/estateType"
                                android:focusableInTouchMode="true"
                                android:entries="@{EstateModel.getEstateTypeItems()}"
                                app:selectedSpinnerValue="@={TextViewValueConverter.estateTypeToStr(estate.type)}"
                                app:onFocusValueRequired="@{estate.type}"
                                app:errorLabel="@{estateTypeLabel}"
                                app:errorMessage="@{@string/error_value_required}"/>

                        </TableRow>
                        <TableRow android:padding="@dimen/table_row_padding">

                            <TextView android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Address:"
                                android:id="@+id/addressLabel"
                                android:labelFor="@+id/address"
                                />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/address"
                                android:text="@={estate.address}"
                                android:maxEms="12"
                                android:hint="@string/address_tooltip"
                                app:validationRule="@{@string/string_gt_3_lt_20}"
                                app:required="@{false}"
                                app:errorMessage="@{@string/error_string_gt_3_lt_20}"
                                app:errorLabel="@{addressLabel}"
                                />

                        </TableRow>

                        <TableRow android:padding="@dimen/table_row_padding">

                            <TextView android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Contacts:"
                                android:id="@+id/contactsLabel"/>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/contacts"
                                android:focusableInTouchMode="true"
                                android:text="@={estate.contacts}"
                                android:hint="@string/phone_number_tooltip"
                                android:maxEms="12"
                                android:onClick="@{(v) -> TelephoneBindingAdapter.onClickPhoneEdit(v,estate.contacts)}"
                                app:validationRule="@{@string/phone_with_countrycode_3group_match_pattern}"
                                app:required="@{true}"
                                app:errorMessage="@{@string/phone_number_tooltip}"
                                app:errorLabel="@{contactsLabel}"/>

                        </TableRow>

                        <TableRow android:padding="@dimen/table_row_padding">

                            <TextView android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Description:" />

                            <EditText
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/description"
                                android:text="@={estate.description}"
                                android:maxEms="12"

                                android:inputType="textMultiLine"
                                android:lines="5"
                                android:minLines="2"
                                android:scrollHorizontally="false"
                                android:scrollbars="vertical"
                                />

                        </TableRow>
                    </TableLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                                <com.prelimtek.android.customcomponents.view.CustomImageButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentLeft="true"
                                    android:layout_margin="@dimen/btn_layout_margin"
                                    android:tooltipText="@string/save_close"
                                    android:id="@+id/update_estate_button"
                                    app:imageSrc="@drawable/save_close_48"
                                    app:text="@string/save_close"
                                    app:textPosition="text_bottom"
                                    />

                                <com.prelimtek.android.customcomponents.view.CustomImageButton
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentRight="true"
                                    android:layout_margin="@dimen/btn_layout_margin"
                                    android:tooltipText="@string/cancel"
                                    android:id="@+id/cancel_edit_estate_button"
                                    app:imageSrc="@drawable/trash"
                                    app:text="@string/cancel"
                                    app:textPosition="text_bottom"

                                    />

                            </RelativeLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

        <com.prelimtek.android.customcomponents.view.CustomAppVersionTextRelativeLayout
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:gravity="right"
            />

    </RelativeLayout>

</layout>