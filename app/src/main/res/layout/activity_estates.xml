<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <import type="io.mtini.model.EstateModel"/>
        <import type="android.databinding.ObservableList"/>
        <variable name="estate" type="EstateModel" />
        <variable name="estates" type="ObservableList&lt;EstateModel&gt;" />
    </data>


    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/estatesLayoutView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/activity_vertical_margin"
        tools:context=".EstateActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/addBtnLinearLayout"
            android:orientation="horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Estate List"
                android:gravity="center"
                android:textStyle="bold"
                android:layout_margin="@dimen/activity_horizontal_margin"
                android:textColor="@android:color/holo_orange_dark"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:id="@+id/textEstateCount"
                />

            <com.prelimtek.android.customcomponents.view.CustomImageButton
                android:id="@+id/add_estate_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="@dimen/fab_margin"
                android:tooltipText="@string/add_estate_btn_tooltip"
                app:imageSrc="@drawable/add_list_30"
                app:text="@string/add_estate"
                />

        </RelativeLayout>

        <ListView
            android:id="@+id/estateslistView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            />

    </LinearLayout>
</layout>